---
import Image from "./common/Image.astro";
---
<div class="img-ct">
  <div class="logo-container">
    <Image class="logo-img" src="~/assets/images/general/udb.png" alt="logo">
  </div>
</div>

<style>
  .logo-container {
    width: 40px; 
    height: 40px;
    overflow: hidden; /* Oculta las partes sobrantes de la imagen */
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .img-ct {
    padding: 5px;
    background-color: white;
    border-radius: 10%;

  }

  .logo-img {
    width: 100%;
    height: 100%;
    object-fit: cover; /* Evita que la imagen se deforme */
  }

  /* Ajustes para dispositivos m√≥viles */
  @media (max-width: 768px) { 
    .logo-container {
      width: 50px;
      height: 50px;
    }
  }
</style>
