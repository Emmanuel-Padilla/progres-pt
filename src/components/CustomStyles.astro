---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Colores principales basados en la imagen */
    --aw-color-primary: rgb(40, 80, 100); /* Azul oscuro */
    --aw-color-secondary: rgb(86, 181, 167); /* Verde azulado suave */
    --aw-color-accent: rgb(255, 255, 255); /* Blanco */

    --aw-color-text-heading: rgb(0, 0, 0); /* Negro */
    --aw-color-text-default: rgb(0, 0, 0); /* Negro */
    --aw-color-text-muted: rgba(0, 0, 0, 0.66); /* Verde azulado suave transl√∫cido */

    --aw-color-bg-page: rgb(255, 255, 255);
    --aw-color-bg-page-dark: var(--aw-color-primary);

    ::selection {
      background-color: var(--aw-color-secondary); /* Verde azulado suave */
      color: var(--aw-color-accent); /* Blanco */
    }
  }

  .spilled-paint-effect {
    position: relative;
    overflow: hidden;
  }

  .spilled-paint-effect:hover::after {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    width: 200%;
    height: 100%;
    background: linear-gradient(135deg, rgba(40, 80, 100, 0.7), rgba(86, 181, 167, 0.5), rgba(40, 80, 100, 0.4));  /* Azul oscuro y verde azulado suave */
    transform: translateX(-50%) rotate(-10deg);
    pointer-events: none;
    animation: spill 5s infinite ease-in-out;
  }

  @keyframes spill {
    0% {
      transform: translateX(-50%) rotate(-10deg) scale(1);
    }
    50% {
      transform: translateX(-50%) rotate(10deg) scale(1.05);
    }
    100% {
      transform: translateX(-50%) rotate(-10deg) scale(1);
    }
  }

  .dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* Modo oscuro basado en los colores de la imagen */
    --aw-color-primary: rgb(40, 80, 100);
    --aw-color-secondary: rgba(86, 181, 167, 0.66);
    --aw-color-accent: rgba(255, 255, 255, 0.8);

    --aw-color-text-heading: rgb(0, 0, 0); /* Negro */
    --aw-color-text-default: rgb(0, 0, 0); /* Negro */
    --aw-color-text-muted: var(--aw-color-secondary);

    --aw-color-bg-page: rgb(40, 80, 100);

    ::selection {
      background-color: var(--aw-color-primary); /* Azul oscuro */
      color: var(--aw-color-accent); /* Blanco */
    }
  }
</style>
